{
  "name": "ts-remix-template",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "packageManager": "pnpm@9.0.5",
  "scripts": {
    "build": "remix vite:build",
    "deploy": "pnpm run build && wrangler pages deploy",
    "dev": "remix vite:dev",
    "start": "wrangler pages dev ./build/client",
    "check": "concurrently 'pnpm run lint:*' 'tsc'",
    "lint": "concurrently 'pnpm run lint:*'",
    "lint:test": "eslint . --max-warnings 0 --config eslint.config.mjs",
    "lint:src": "biome check .",
    "fmt": "biome fmt .",
    "typecheck": "tsc",
    "cf-typegen": "wrangler types",
    "typegen": "wrangler types"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^2.9.1",
    "@remix-run/cloudflare-pages": "^2.9.1",
    "@remix-run/react": "^2.9.1",
    "isbot": "^4.1.0",
    "miniflare": "^3.20240419.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.2",
    "@cloudflare/workers-types": "^4.20240502.0",
    "@eslint/eslintrc": "^3.0.2",
    "@eslint/js": "^9.2.0",
    "@remix-run/dev": "^2.9.1",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-testing-library": "^6.2.2",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^15.1.0",
    "jsdom": "^24.0.0",
    "lefthook": "^1.6.10",
    "typescript": "^5.1.6",
    "typescript-eslint": "^7.8.0",
    "vite": "^5.1.0",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9",
    "npm": "please use pnpm!",
    "yarn": "please use pnpm!"
  }
}
